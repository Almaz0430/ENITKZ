# Пример файла .env для настройки переменных окружения
# Скопируйте этот файл в .env и заполните необходимыми значениями

# Основные настройки Django
# -----------------------
# Секретный ключ Django (обязательно измените на уникальное значение)
# Для генерации используйте: python generate_secret_key.py
DJANGO_SECRET_KEY=your_very_secure_secret_key_here

# Режим отладки (True для разработки, False для продакшена)
DJANGO_DEBUG=False

# Настройки базы данных
# -----------------------
# URL для подключения к базе данных
# Примеры:
# SQLite: sqlite:///db.sqlite3
# PostgreSQL: postgres://user:password@localhost:5432/dbname
# MySQL: mysql://user:password@localhost:3306/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Настройки безопасности
# -----------------------
# Список разрешенных хостов (через запятую, без пробелов)
ALLOWED_HOSTS=localhost,127.0.0.1,web-production-f185.up.railway.app

# Список разрешенных источников для CORS (через запятую, без пробелов)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://web-production-f185.up.railway.app

# URL фронтенда
# -----------------------
# Используется для формирования ссылок в письмах и перенаправлениях
FRONTEND_URL=https://web-production-f185.up.railway.app

# Настройки электронной почты
# -----------------------
# Раскомментируйте и настройте для отправки реальных писем
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@example.com
# EMAIL_HOST_PASSWORD=your_email_password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@example.com

# Дополнительные настройки
# -----------------------
# Таймаут сессии в секундах (2 недели = 1209600)
# SESSION_COOKIE_AGE=1209600

# Настройки для продакшн-окружения
# -----------------------
# SECURE_SSL_REDIRECT=True
